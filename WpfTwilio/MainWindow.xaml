<Window x:Class="WpfTwilio.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="WpfTwilio - Mario Medeiros - 1500077" Height="500" Width="650"
    xmlns:views="clr-namespace:WpfTwilio.View">
    <DockPanel LastChildFill="True">

        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem>Seleciona um contato para enviar uma mensagem</StatusBarItem>
        </StatusBar>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <views:EnviarMensagemView  HorizontalAlignment="Right"/>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <views:ContatosListaView Margin="0,0,5,0" />
                <GridSplitter HorizontalAlignment="Right" Width="5"
                              Background="Silver"/>
                <views:MensagensView Grid.Column="1"/>

            </Grid>

        </Grid>

    </DockPanel>
</Window>